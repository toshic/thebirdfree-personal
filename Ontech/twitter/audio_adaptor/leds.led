//define some special led pins

pio 0 BLUE
pio 1 RED


//define some patterns to be used

pattern LEDS_OFF RPT
    RED BLUE OFF 0
    
pattern RED_ON RPT
    RED ON 0

pattern BLUE_ONE_SEC_ON_RPT    RPT
    BLUE ON  1000
    BLUE OFF 200    

pattern RED_ON_BLUE_ONE_SEC_ON_RPT    RPT
