    BLUE OFF 200   

pattern RED_ONE_SEC_ON_RPT    RPT
    RED ON  1000
    RED OFF 200    

pattern BLUE_SHORT_ON_RPT  RPT
    BLUE ON  100
    BLUE OFF 2400
    
pattern RED_SHORT_ON_RPT  RPT
    RED ON  100
    RED OFF 2400
    
pattern RED_ON_BLUE_SHORT_RPT RPT
    RED  BLUE ON  100
    BLUE OFF  2400
    
pattern BLUE_TWO_FLASHES_RPT RPT
